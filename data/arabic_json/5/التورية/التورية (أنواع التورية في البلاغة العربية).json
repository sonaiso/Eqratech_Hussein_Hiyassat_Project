{
  "أنواع التورية": [
    {
      "العنوان": "التورية المجرّدة",
      "الأمثلة": "أَنَا المَمْدُوحُ فِي زَمْنِي المُعَظَّمْ / وَلِي مِنْ نُصْرَةِ الأَيَّامِ جَيْشٌ لَا يُهَزَّمْ",
      "المعنى القريب (الوهمي)": "\"المُعَظَّم\": الذي يُوقّر ويُحترم",
      "المعنى البعيد (المراد)": "\"المُعَظَّم\": شهر \"عظَّم\" من شهور العرب",
      "سبب التسمية": "مجردة: لخلو الطرفين من قرينة ترجّح أحدهما",
      "القرينة البلاغية المساعدة": "لا توجد قرينة ظاهرة",
      "التعليق البلاغي": "التورية خفية؛ إذ جاء اللفظ محتمِلًا لمعنيين دون ترجيح، مما يجعلها ألطف وأعمق أثرًا.",
      "الملاحظات": ""
    },
    {
      "العنوان": "التورية المرشَّحة",
      "الأمثلة": "فَإِنْ تَسْأَلُونِي كَيْفَ أَنْتَ فَإنَّنِي / صَحَيْحٌ عَلَى سَقَمٍ، أََسِيرٌ عَلَى قَدَمِ",
      "المعنى القريب (الوهمي)": "\"صحيح\": السليم من العِلّة",
      "المعنى البعيد (المراد)": "\"صحيح\": اسم رجل اسمه \"صحيح\"",
      "سبب التسمية": "مرشَّحة: لأن القريب زُيِّن بوصف يؤكده (\"على سقم\")",
      "القرينة البلاغية المساعدة": "كلمة \"على سقم\" توهم أن المقصود المعنى القريب",
      "التعليق البلاغي": "المعنى القريب بدا مرجّحًا، ولكن عند التأمل، يتضح أن المراد شخص اسمه \"صحيح\"، مما يعطي النص عمقًا شعوريًا",
      "الملاحظات": ""
    },
    {
      "العنوان": "التورية المبيَّنة",
      "الأمثلة": "أُحِبُّ المَدَامَ، وَكَمْ فِي المَدَامِ / مِنَ السِّرِّ مَا لَا تَرَاهُ العُيُوْنُ",
      "المعنى القريب (الوهمي)": "\"المدام\": الخمر",
      "المعنى البعيد (المراد)": "\"المدام\": المرأة",
      "سبب التسمية": "مبيّنة: لأن البعيد زُيِّن بما يدل عليه (\"ما لا تراه العيون\")",
      "القرينة البلاغية المساعدة": "ذكر \"العيون\" قرينة على المعنى الأنثوي",
      "التعليق البلاغي": "التورية هنا واضحة، إذ البعيد هو المقصود، ويُدعم بالسياق العاطفي الذي لا يناسب الخمر",
      "الملاحظات": ""
    },
    {
      "العنوان": "التورية المهيَّأة",
      "الأمثلة": "أَرَى الشَّوْقَ يُدْمِي مُقْلَتَيَّ وَلَمْ أَكُنْ / أُرِيدُ سِوَى وَصْلٍ وَدَمْعٍ يُكَفْكِفُ",
      "المعنى القريب (الوهمي)": "\"أُريد\": أفعل إرادة",
      "المعنى البعيد (المراد)": "\"أُريد\": اسم امرأة \"أُريد\"",
      "سبب التسمية": "مهيَّأة: لأن البعيد زُيِّن بلفظ ممهد (الوصل والدمع)",
      "القرينة البلاغية المساعدة": "\"وصل – دمع – يُكَفْكِف\" يوحي بسياق وجداني أنثوي",
      "التعليق البلاغي": "السياق الشعري هيّأ المتلقي لاستقبال المعنى البعيد، لذا التورية ممهَّدة بخيوط شعورية دقيقة",
      "الملاحظات": ""
    },
